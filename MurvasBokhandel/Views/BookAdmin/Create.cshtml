@model Common.Model.BookAndAuthors
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Store", "BookAdmin"))
{
    <div class="form-group">
        <label>Författare</label>
        @Html.DropDownListFor(m => m.Aid, new SelectList(Model.Authors, "Aid", "Firstname"), new { @class = "form-control" })
        <small><a href="/AuthorAdmin/Create">Skapa författare</a></small>
    </div>
    <hr/>
    <div class="form-group">
        <label>ISBN</label>
        @Html.TextBoxFor(m => m.Book.ISBN, new { @class = "form-control", @type = "number" })
    </div>
    
    <div class="form-group">
        <label>Titel</label>
        @Html.TextBoxFor(m => m.Book.Title, new { @class= "form-control" })
    </div>
    
    <div class="form-group">
        <label>Publikationsår</label>
        @Html.TextBoxFor(m => m.Book.PublicationYear, new { @class = "form-control", @type ="number" })
    </div>
    
    <div class="form-group">
        <label>Publikationsinformation</label>
        @Html.TextAreaFor(m => m.Book.Publicationinfo, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label>Antal sidor</label>
        @Html.TextBoxFor(m => m.Book.Pages, new { @class = "form-control", @type = "number" })
    </div>
    
    <div class="form-group">
        <input type="submit" value="Spara" class="btn btn-default" />
    </div>
}