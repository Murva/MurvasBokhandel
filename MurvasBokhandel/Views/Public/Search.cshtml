@model IList<MurvasBokhandel.Models.BookWithAuthor>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
<div class="row">
    <div class="col-md-4">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Författare</th>
                    <th></th>
                    <th>Boktitel</th>
                </tr>
            </thead> 
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td><a href="/Book/GetBook/?Aid=@book.Aid">@book.FirstName</a></td>
                        <td><a href="/Book/GetBook/?Aid=@book.Aid">@book.LastName</a></td>
                        <td><a href="/Book/GetBook/?ISBN=@book.ISBN">@book.Title</a></td> 
                    </tr>
                }
            </tbody>
            
        </table>
    </div>
</div>

