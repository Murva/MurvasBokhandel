@model MurvasBokhandel.Controllers.AuthorResult
@{
    ViewBag.Title = "Author";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Model.FirstName @Model.LastName - <small><a href="/AuthorAdmin">Författare</a></small>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h4>Redigera författare</h4>
        @using (Html.BeginForm("Update", "AuthorAdmin"))
        {
            <div class="form-group">
                <label>Förnamn</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Efternamn</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-warning" value="Updatera" />
                <button class="btn btn-danger pull-right" form="form-remove-author" >Ta bort</button>
            </div>
            
            if (ViewBag.Alert != null)
            {
                <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Alert</div>
            }
        }
        @using (Html.BeginForm("Remove", "AuthorAdmin", FormMethod.Post, new { @id = "form-remove-author" }))
        {
            @Html.HiddenFor(m => m.Aid)
        }
    </div>
    <div class="col-md-6">
        <h4>Böcker av författare</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Titel</th>
                    <th>ISBN</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <td><a href="/BookAdmin/Book/?isbn=@book.ISBN">@book.Title</a></td>
                        <td>@book.ISBN</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

