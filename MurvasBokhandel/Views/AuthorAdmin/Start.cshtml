@model IList<MurvasBokhandel.Controllers.AuthorResult>
@{
    ViewBag.Title = "Författare";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Administrator - <small>Författare</small>
        </h1>
    </div>
</div>
<div class="row">
    <div class="text-center">
        <a href="/AuthorAdmin" class="btn btn-default">Författare</a>
        <a href="/BorrowerAdmin" class="btn btn-default">Låntagare</a>
        <a href="/BookAdmin" class="btn btn-default">Böcker</a>
    </div>
    <hr />
</div>
<div class="row">
    <div class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Namn
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var author in Model)
                {
                    <tr>
                        <td><a href="/AuthorAdmin/Author/?Aid=@author.Aid">@author.FirstName @author.LastName</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

