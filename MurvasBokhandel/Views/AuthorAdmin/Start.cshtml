@model IList<MurvasBokhandel.Models.Mockup.AUTHOR>
@{
    ViewBag.Title = "Författare";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Författare <small><label class="label label-warning">Administratorläge</label></small>
            <a href="/AuthorAdmin/Create" class="btn btn-default pull-right">Skapa ny författare</a>
        </h1>
    </div>
</div>
<div class="row">
    <div class="text-center">
        <a href="/AuthorAdmin" class="btn btn-default active">Författare</a>
        <a href="/BorrowerAdmin" class="btn btn-default">Låntagare</a>
        <a href="/BookAdmin" class="btn btn-default">Böcker</a>
    </div>
    <hr />
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center"><a href="/AuthorAdmin/Start?orderBy=id">#</a></th>
                    <th class="text-center"><a href="/AuthorAdmin/Start?orderBy=name">Författarnamn</a></th>
                    <th class="text-center"><a href="/AuthorAdmin/Start?orderBy=year">Födelseår</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Author in Model)
                {
                    <tr>
                        <td>@Author.Aid</td>
                        <td><a href="/AuthorAdmin/Author/@Author.Aid">@Author.FirstName @Author.LastName</a></td>
                        <td>@Author.BirthYear</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

