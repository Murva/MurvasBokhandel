@model Common.Model.BorrowerAndCategories

@{
    ViewBag.Title = "Create";
}

<h2>Skapa</h2>

@using (Html.BeginForm("Store", "BorrowerAdmin", FormMethod.Post, new {  @id="create_borrower_form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-8">

        @if (Model.IsAlerted())
        {
            @Html.Raw(Model.PopAlert())
        }

        <h4><a href="/BorrowerAdmin">Låntagare</a></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Personnummer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.borrower.PersonId, new { htmlAttributes = new { @class = "form-control", placeholder = "XXXXXXXX-XXXX", data_parsley_required = "true" } })
                @Html.ValidationMessageFor(model => model.borrower.PersonId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Förnamn", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.borrower.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "Förnamn", data_parsley_required = "true" } })
                @Html.ValidationMessageFor(model => model.borrower.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Efternamn", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.borrower.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Efternamn", data_parsley_required = "true" } })
                @Html.ValidationMessageFor(model => model.borrower.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Adress", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.borrower.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Adress" } })
                @Html.ValidationMessageFor(model => model.borrower.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Telefonnummer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.borrower.Telno, new { htmlAttributes = new { @class = "form-control", placeholder = "0000-000000" } })
                @Html.ValidationMessageFor(model => model.borrower.Telno, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.DropDownListFor(model => model.CatergoryId, new SelectList(Model.categories, "CatergoryId", "Category"), new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Skapa" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        $("#create_borrower_form").parsley({
            trigger: 'change',
            successClass: "has-success",
            errorClass: "has-error",
            classHandler: function (el) {
                return el.$element.closest('.form-group');
            },
            errorsWrapper: '<div class="invalid-message"></div>',
            errorTemplate: '<span></span>',
        });
    </script>
}