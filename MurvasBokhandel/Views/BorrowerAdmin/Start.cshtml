@model IList<MurvasBokhandel.Models.Mockup.BORROWER>
@{
    ViewBag.Title = "Start";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Låntagare <small><label class="label label-warning">Administratorläge</label></small>
            <a href="/BorrowerAdmin/Create" class="btn btn-default pull-right">Skapa ny låntagare</a>
        </h1>
    </div>
</div>
<div class="row">
    <div class="text-center">
        <a href="/AuthorAdmin" class="btn btn-default">Författare</a>
        <a href="/BorrowerAdmin" class="btn btn-default active">Låntagare</a>
        <a href="/BookAdmin" class="btn btn-default">Böcker</a>
    </div>
    <hr />
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">Personnr</th>
                    <th class="text-center">Namn</th>
                    <th class="text-center">Adress</th>
                    <th class="text-center">Telnr</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var borrower in Model) {
                    <tr>
                        <td><a href="/BorrowerAdmin/Borrower/@borrower.PersonId">@borrower.PersonId</a></td>
                        <td>@borrower.FirstName @borrower.LastName</td>
                        <td>@borrower.Address</td>
                        <td>@borrower.Telno</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
