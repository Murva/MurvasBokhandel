@model MurvasBokhandel.Models.BorrowerWithBorrows
@{
    ViewBag.Title = "Borrower";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @Model.Borrower.FirstName @Model.Borrower.LastName - <small><a href="/BorrowerAdmin">Låntagare</a></small>
        </h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h4>Låntagarinformation</h4>
        @using (Html.BeginForm("Update", "BorrowerAdmin"))
        {
            <div class="form-group">
                <label>Personnummer</label>
                @Html.TextBoxFor(m => m.Borrower.PersonId, new { @class = "form-control", @type = "number", @disabled = "disabled" })
            </div>
            <div class="form-group">
                <label>Förnamn</label>
                @Html.TextBoxFor(m => m.Borrower.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Efternamn</label>
                @Html.TextBoxFor(m => m.Borrower.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Adress</label>
                @Html.TextBoxFor(m => m.Borrower.Address, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Telefonnummer</label>
                @Html.TextBoxFor(m => m.Borrower.Telno, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-warning" value="Uppdatera" />
                <button type="submit" class="btn btn-danger pull-right" form="form-remove-borrower">Ta bort</button>
            </div>
        }

        @using (Html.BeginForm("Remove", "AuthorAdmin", FormMethod.Post, new { @id = "form-remove-borrower" }))
        {
            @Html.HiddenFor(m => m.Borrower.PersonId)
        }
    </div>
    <div class="col-md-8">
        <h4>Lånade böcker 
            <button type="button" class="btn btn-default btn-sm pull-right" data-toggle="modal" data-target="#add-loan">
                <i class="fa fa-plus"></i> Låna bok till låntagare
            </button>
        </h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Barcode</th>
                    <th>Lånad den</th>
                    <th>Lämnas tillbaka</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var borrowed in Model.Borrows)
                {
                    <tr>
                        <td>@borrowed.Barcode</td>
                        <td>@borrowed.BorrowDate.ToShortDateString()</td>
                        <td>@borrowed.ToBeReturnedDate.ToShortDateString()</td>
                        <td><span class="label label-warning">Lånas under tid</span></td>
                        <td><a href="/BorrowerAdmin/RenewLoan/?barcode=@borrowed.Barcode&personid=@borrowed.PersonId" class="btn btn-default btn-xs">Låna om</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="add-loan" tabindex="-1" role="dialog" aria-labelledby="LoanBook">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Låna bok till låntagare</h4>
                    </div>
                    <div class="modal-body">
                        <form action="/BorrowerAdmin/AddBorrowToBorrower" method="post" id="form-addborrowtoborrower">
                            <input type="hidden" name="Aid" value="@Model.Borrower.PersonId" />
                            <div class="form-group">
                                <label>Barcode</label>
                                <input type="number" class="form-control" name="Barcode" placeholder="ex. 9999999999" />
                            </div>
                            <div class="form-group">
                                <label>Lånad den...</label>
                                <input type="datetime" class="form-control" id="BorrowDate" name="BorrowDate" />
                            </div>
                            <div class="form-group">
                                <label>Lämnas tillbaka den...</label>
                                <input type="datetime" class="form-control" id="ToBeReturnedDate" name="ToBeReturnedDate">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Stäng</button>
                        <button class="btn btn-primary" form="form-addborrowtoborrower">Spara</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript" async="async">
        $(window).ready(function () {
            var today = new Date($.now());
            //today.toLocaleDateString() + today.toLocaleTimeString()
            $("#BorrowDate").val("hej");
        });
    </script>
}
