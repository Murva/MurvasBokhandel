@model Common.Model.BookAndAuthors

@{
    ViewBag.Title = "GetBook";
}


<h2>Sökresultat</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead class="alert-info">
                <tr>
                    <th>Författare</th>
                    <th></th>
                    <th>Titel</th>
                    <th>ISBN</th>
                    <th>Publikaionsår</th>
                    <th>PublikationsInformation</th>
                    <th>Antal sidor</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><a href="/Author/GetAuthor/?aid=@Model.Authors[0].Aid">@Model.Authors[0].FirstName</a></td>
                    <td><a href="/Author/GetAuthor/?aid=@Model.Authors[0].Aid">@Model.Authors[0].LastName</a></td>
                    <td>@Model.Book.Title</td>
                    <td>@Model.Book.ISBN</td>
                    <td>@Model.Book.PublicationYear</td>
                    <td>@Model.Book.publicationinfo</td>
                    <td>@Model.Book.pages</td>
                </tr>
            </tbody>
        </table>
        <a href="javascript:void(0);" onclick="history.go(-1);"><input class="btn btn-default" value="Tillbaka" type="submit" /></a>
